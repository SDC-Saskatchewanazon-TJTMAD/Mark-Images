const express = require('express');
const httpProxy = require ('http-proxy');
const app = express();
const port = 8000;

const apiProxy = httpProxy.createProxyServer();

const Search = 'http://localhost:_FILLMEIN_';
const Description = 'http://localhost:_FILLMEIN_';
const ProductImage = 'http://localhost:_FILLMEIN_';
const Checkout = 'http://localhost:_FILLMEIN_';
const Carousel= 'http://localhost:_FILLMEIN_';
const Ratings = 'http://localhost:_FILLMEIN_';

app.all('/Search/*', (req, res) => {
  apiProxy.web(req, res, {target: Search});
});

app.all('/Description/*', (req, res) => {
  apiProxy.web(req, res, {target: Search});
});

app.all('/ProductImage/*', (req, res) => {
  apiProxy.web(req, res, {target: Search});
});

app.all('/Checkout/*', (req, res) => {
  apiProxy.web(req, res, {target: Search});
});

app.all('/Carousel/*', (req, res) => {
  apiProxy.web(req, res, {target: Search});
});

app.all('/Ratings/*', (req, res) => {
  apiProxy.web(req, res, {target: Search});
});


app.listen(port, () => {console.log(`just chillin at ${port}`)});